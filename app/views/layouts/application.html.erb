<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2Ver2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <script src="https://kit.fontawesome.com/15ed15601f.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <%= render 'layouts/header' %>
      <main>
        <% if user_signed_in? %>
         <div class="d-flex justify-content-center mb-2 mt-1 ">
          <%= form_with url: search_path, method: :get do |f| %>
            <%= f.text_field :search_word %>
            <%= f.select :model, options_for_select([["User"],["Book"]]) %>
            <%= f.select :method, options_for_select([["完全一致", "perfect"],["部分一致", "partial"],["前方一致", "forward"],["後方一致", "backward"]]) %>
            <%= f.submit "検索" %>
            <% end %>
         </div>
        <% end %>
        <%= yield %>
        <p id="notice"><%= notice %></p>
      </main>
    <%= render 'layouts/footer' %>
  </body>
</html>
