<table class='table'>
  <tr><%= image_tag user.get_profile_image, size:'100x100' %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th>follows</th>
    <th><%= link_to followers_user_path(user) do %>
    <%= user.followers.count %>
    <% end %>
    </th>
  </tr>
  <tr>
    <th>followers</th>
    <th><%= link_to followeds_user_path(user) do %>
    <%= user.followeds.count %>
    <% end %>
    </th>
  </tr>
</table>
　
　
 <div class='row'>　
　<%= if user.id == current_user.id do %>
    <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  <% end %>
    <% if user.is_followed_by?(current_user) %>
      <td><%= link_to 'フォロー外す', user_relationships_path(user), method: :delete %></td>
      <% else%>
      <td><%= link_to 'フォローする', user_relationships_path(user), method: :post %></td>
    <% end %>
  
  <% end %>
</div>