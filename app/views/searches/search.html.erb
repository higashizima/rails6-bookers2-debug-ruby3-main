
<% if @model == 'User' %>

  <h3>Users search for "<%= @search_word %>"</h3>
  <table class='table'>
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @records.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
          <td><%= user.name %></td>
          <td>フォロー数<%= user.followers.count %></td>
          <td>フォロワー数<%= user.followeds.count %></td>
          <td><%= link_to 'Show', user %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% elsif @model == 'Book' %>
  <h3>Books search for "<%= @search_word %>"</h3>
  <table class='table'>
    <thead>
      <tr>
        <th colspan="1"></th>
        <th>title</th>
        <th>option</th>
      </tr>
    </thead>
    <tbody>
      <% @records.each do |book| %>
        <tr>
          <td><%= image_tag book.user.get_profile_image, size: '50x50' %></td>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
<% end %>